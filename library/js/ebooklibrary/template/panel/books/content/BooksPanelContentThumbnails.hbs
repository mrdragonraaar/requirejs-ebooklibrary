{{!
{
	"name": "BooksPanelContentThumbnails",
	"description": "Books Panel Thumbnails Template"
}
}}
<div class="panel-content panel-content-thumbnails row multi-columns-row">
{{#each books}}
	<div class="panel-content-thumbnail col-lg-2 col-md-3 col-sm-4 col-xs-6">
<!--
		<div class="!thumbnail !thumbnail-book">
-->
			<a class="thumbnail" href="{{downloadUrl}}" title="{{fileInfo.name}}"><img src="{{bookInfo.cover}}"/></a>
			<h5 class="heading-author" title="{{bookInfo.authorStr}}"><a href="{{seriesHref}}">{{bookInfo.authorStr}}</a></h5>
			<h4 class="heading-title" title="{{bookInfo.title}}"><a href="{{href}}">{{bookInfo.title}}</a></h4>
<!--
		</div>
-->
	</div>
{{/each}}
</div>
